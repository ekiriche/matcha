{% extends 'templates/app.twig'%}

{% block content %}
	<div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">Sign In</div>
                <div class="panel-body">
                    <form action="{{ path_for('auth.signin') }}" method="post" autocomplete="off">
                        <div class="form-group{{ errors.login ? ' has-error' : ''}}">
                            <label for="login">Login</label>
                            <input type="text" name="login" id="login" placeholder="Your login" class="form-control" value="{{ old.login }}"/>
                            {% if errors.login %}
                                <span class="help-block">{{ errors.login | first }}</span>
                            {% endif %}
                        </div>
                         <div class="form-group{{ errors.password ? ' has-error' : ''}}">
                            <label for="password">Password</label>
                            <input type="password" name="password" id="password" placeholder="Your password" class="form-control"/>
                            {% if errors.password %}
                                <span class="help-block">{{ errors.password | first }}</span>
                            {% endif %}
                        </div>
                        <button type="submit" class="btn btn-default">Sign Up</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}