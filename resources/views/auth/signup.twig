{% extends 'templates/app.twig'%}

{% block content %}
	<div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">Sign Up</div>
                <div class="panel-body">
                    <form action="{{ path_for('auth.signup') }}" method="post" autocomplete="off">
                        <div class="form-group{{ errors.login ? ' has-error' : ''}}">
                            <label for="login">Login</label>
                            <input type="text" name="login" id="login" placeholder="Your login" class="form-control" value="{{ old.login }}"/>
                            {% if errors.login %}
                                <span class="help-block">{{ errors.login | first }}</span>
                            {% endif %}
                        </div>
                         <div class="form-group{{ errors.email ? ' has-error' : ''}}">
                            <label for="email">Email</label>
                            <input type="text" name="email" id="email" placeholder="you@domain.com" class="form-control" value="{{ old.email }}"/>
                            {% if errors.email %}
                                <span class="help-block">{{ errors.email | first }}</span>
                            {% endif %}
                        </div>
                        <div class="form-group{{ errors.first_name ? ' has-error' : ''}}">
                            <label for="first_name">First name</label>
                            <input type="text" name="first_name" id="first_name" placeholder="Your first name" class="form-control" value="{{ old.first_name }}"/>
                            {% if errors.email %}
                                <span class="help-block">{{ errors.first_name | first | replace({ '_': ' ' }) }}</span>
                            {% endif %}
                        </div>
                        <div class="form-group{{ errors.last_name ? ' has-error' : ''}}">
                            <label for="last_name">Last name</label>
                            <input type="text" name="last_name" id="last_name" placeholder="Your last name" class="form-control" value="{{ old.last_name }}"/>
                            {% if errors.email %}
                                <span class="help-block">{{ errors.last_name | first | replace({ '_': ' ' })}}</span>
                            {% endif %}
                        </div>
                         <div class="form-group{{ errors.password ? ' has-error' : ''}}">
                            <label for="password">Password</label>
                            <input type="password" name="password" id="password" placeholder="Your password" class="form-control"/>
                            {% if errors.password %}
                                <span class="help-block">{{ errors.password | first }}</span>
                            {% endif %}
                        </div>
                        <button type="submit" class="btn btn-default">Sign Up</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}